{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": ".", // ðŸ‘ˆ nÃ©cessaire pour que "paths" fonctionne
        "paths": {
            "@/*": ["./src/*"],
            "@app/*": ["app/*"],
            "@components/*": ["src/components/*"],
            "@assets/*": ["src/assets/*"],
            "@home/*": ["src/home/*"],
            "@utils/*": ["src/utils/*"],
            "@hooks/*": ["src/hooks/*"],
            "@styles/*": ["src/assets/styles/*"],
            "@data/*": ["src/assets/data/*"],
            "@svg/*": ["src/components/svg_Icon/*"],
            "@public/*": ["public/*"]
        },
        "plugins": [
            {
                "name": "next"
            }
        ],
        "strictNullChecks": true
    },
    "include": [
        "next-env.d.ts",
        "app/**/*.ts",
        "app/**/*.tsx",
        "src/**/*.ts",
        "src/**/*.tsx",
        "public/**/*.json",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "app/layout.tsx",
        "src/components/99-Svg_Icon/SvgUse.jsx",
        "src/components/00-Header/SideInterface.jsx"
    ],
    "exclude": ["node_modules", ".next", "dist"]
}
